<div class="page-wrap">
   <h1>New task</h1>
  <div class="content">

    <%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, class: 'form-control' %>
        <%= f.submit class: 'button' %>
        <div class="button">
          <%= link_to 'Back to list', tasks_path %>
        </div>
      </div>

    <% end %>



  </div>
</div>
